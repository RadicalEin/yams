{% for joueur in nomjoueurs.player %}

    <div class="container">
        <div class="row">
            <div class="col-xl-">
                <table class="table table-responsive">
                    <tr>
                       <th colspan="5" class="text-uppercase table-head text-white" >
                           <b>{{ joueur.Nom }}</b>
                           {% if joueur.Playing == true %}
                               <b>*</b>
                           {% endif %}
                       </th>
                        <th colspan="2" >{{ joueur.ScoreTotal }}</th>





                        </th>
                    </tr>
                    <tr class="text-uppercase">

                        <td>dé 1</td><td>dé 2</td><td>dé 3</td><td>dé 4</td><td>dé 5</td><td>résultat</td><td>score</td>
                    </tr>
                    {% block score %}
                        {% include "elements/score.html.twig" %}
                    {% endblock %}
                </table>
            </div>
        </div>
    </div>

{% endfor %}

